(library
 (name        bitmasks)
 (public_name bitmasks)
 (synopsis    "BitMasks over int and int64 exposed as sets")
 (modules     BitMaskSet)
 (libraries   stdlib-shims seq)
 (wrapped     false))

(executable
 (name      example)
 (modes     byte exe)
 (modules   Example)
 (libraries bitmasks))

(alias
 (name    runtest)
 (deps   (:< example.exe))
 (action (run %{<})))

(executable
 (name      Tests)
 (modes     byte exe)
 (modules   Tests)
 (libraries bitmasks))

(rule
 (with-stdout-to Tests.result (run %{exe:Tests.exe} %{dep:Tests.reference})))

(alias
 (name   runtest)
 (action (system "diff %{read:DiffFlags.sexp}%{dep:Tests.result} %{dep:Tests.reference}")))

(rule
 (targets DiffFlags.sexp)
 (deps    DiffFlags.ml)
 (action  (with-stdout-to %{targets} (run ocaml DiffFlags.ml))))

(rule
 (targets DiffFlags.ml)
 (action  (with-stdout-to %{targets} (echo "if not Sys.unix then print_string \"--ignore-trailing-space \""))))
